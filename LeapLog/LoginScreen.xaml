<Window x:Class="LeapLog.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapLog"
        mc:Ignorable="d"
        Title="Login" Height="404" Width="631" FontSize="14" Background="AliceBlue">
    <Grid HorizontalAlignment="Left" Height="400" Margin="-151,0,0,0" Width="900" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="387*"/>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="184*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Username:" RenderTransformOrigin="-0.897,0.593" FontSize="14" Margin="354,108,33,262" Grid.ColumnSpan="2"/>
        <Label x:Name="label1" Content="Enter Password: " FontSize="14" Margin="354,176,33,194" Grid.ColumnSpan="2"/>
        <TextBox x:Name="UserName" Text="Enter username" TextWrapping="Wrap" TextChanged="textBox1_TextChanged" FontFamily="Calibri" FontStyle="Italic" Margin="354,142,7,228" Grid.ColumnSpan="2"/>
        <Label x:Name="label2" Content="Login" FontSize="20" FontWeight="Bold" Margin="27,57,67,296" Grid.Column="1"/>
        <Button x:Name="button" Content="ENTER" Click="button_Click" Margin="354,254,119,100" RenderTransformOrigin="0.388,0.555" Grid.ColumnSpan="2"/>
        <Button x:Name="button1" Content="EXIT" Click="button1_Click" Margin="79,254,7,100" Grid.Column="1"/>
        <PasswordBox x:Name="Pass" HorizontalAlignment="Left" Margin="354,210,0,0" VerticalAlignment="Top" Width="192" Password="leaplog" Height="25" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
