<Window x:Class="LeapLog.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapLog"
        mc:Ignorable="d"
        Title="Login" Height="404" Width="631" FontSize="12" Background="AliceBlue">
    <Grid HorizontalAlignment="Left" Height="399" Margin="-151,0,0,0" Width="900" >
        <Label x:Name="label" Content="Username:" RenderTransformOrigin="-0.897,0.593" FontSize="14" Margin="354,108,380,262"/>
        <Label x:Name="label1" Content="Enter Password: " FontSize="14" Margin="354,176,380,194"/>
        <TextBox x:Name="UserName" Text="Enter username" TextWrapping="Wrap" TextChanged="textBox1_TextChanged" FontFamily="Calibri" FontStyle="Italic" Margin="354,142,354,228"/>
        <Label x:Name="label2" Content="Login" FontSize="20" FontWeight="Bold" Margin="414,57,414,296"/>
        <Button x:Name="button" Content="ENTER" Click="button_Click" Margin="354,254,466,100" RenderTransformOrigin="0.388,0.555"/>
        <Button x:Name="button1" Content="EXIT" Click="button1_Click" Margin="466,254,354,100"/>
        <PasswordBox x:Name="Pass" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="192" Password="leaplog" Height="25"/>

    </Grid>
</Window>
