<UserControl x:Class="LeapLog.T_Accounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapLog"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="650"
             Background="White">
    <Grid>
          <DataGrid x:Name="entryGrid" HorizontalAlignment="Left" Height="418" VerticalAlignment="Top" Width="650" RenderTransformOrigin="0.5,0.5" Margin="3,2,0,0">
               <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Width="120" Binding="{Binding Date}"/>
					<DataGridTextColumn Header="Description" Width="120" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Debit" Width="130" Binding="{Binding Debit}"/>
                    <DataGridTextColumn Header="Credit" Width="130" Binding="{Binding Credit}"/>
                    <DataGridTextColumn Header="Balance" Width="142" Binding="{Binding Balance}"/>
               </DataGrid.Columns>
          </DataGrid>
     </Grid>
</UserControl>
