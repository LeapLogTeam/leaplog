<UserControl x:Class="LeapLog.T_Accounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapLog"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="650"
             Background="White">
    <Grid>
        <!-- assets grid -->
        <DataGrid x:Name="a_Grid" SelectionMode="Single" HorizontalAlignment="Left" Height="422" VerticalAlignment="Center" Width="199" RenderTransformOrigin="0.5,0.5" Margin="10,0,0,0">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <EventSetter Event="PreviewMouseDown" Handler="DataGridCell_MouseDown"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Assets" Width="*" Binding="{Binding Account}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- liabilities grid -->
        <DataGrid x:Name="l_Grid" SelectionMode="Single" HorizontalAlignment="Center" Height="422" VerticalAlignment="Center" Width="198" RenderTransformOrigin="0.5,0.5">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <EventSetter Event="PreviewMouseDown" Handler="DataGridCell_MouseDown"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Liabilities" Width="*" Binding="{Binding Account}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- owner's equity grid -->
        <DataGrid x:Name="oe_Grid" SelectionMode="Single" HorizontalAlignment="Right" Height="422" VerticalAlignment="Center" Width="199" RenderTransformOrigin="0.5,0.5" Margin="441,0,10,0">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <EventSetter Event="PreviewMouseDown" Handler="DataGridCell_MouseDown"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Owner's Equity" Width="*" Binding="{Binding Account}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
