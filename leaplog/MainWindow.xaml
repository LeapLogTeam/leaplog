<Window x:Class="LeapLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapLog"
        mc:Ignorable="d"
        Title="Dashboard" Height="670" Width="792" Closing="Window_Closing_1">
    <Grid Height="596">
        <TabControl SelectionChanged="TabControl_SelectionChanged" HorizontalAlignment="Left" Height="586" Margin="22,10,0,0" VerticalAlignment="Top" Width="752">
            <TabItem Header="Journal" Margin="-2,-2,-36,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="149*"/>
                        <ColumnDefinition Width="595*"/>
                    </Grid.ColumnDefinitions>
                    <local:Journal Height="558" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="T-Accounts" Margin="37,-2,-74,0">
                <Grid Background="#FFE5E5E5">
                    <local:T_Accounts x:Name="t_account_control" Height="558" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
