<UserControl x:Class="LeapLog.Journal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapLog"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="650"
             Background="White">
    <Grid>
        <DataGrid x:Name="entryGrid" HorizontalAlignment="Center" Height="394" VerticalAlignment="Top" Width="650" RenderTransformOrigin="0.5,0.5">
            <!-- Column Header Text & Bindings -->
            <DataGrid.Columns>
                <!-- Date Column -->
                <DataGridTextColumn Header="Date" Width="65 " Binding="{Binding Date}"/>
                <!-- Accounts Column -->
                <DataGridTemplateColumn Header="Accounts" Width="250 ">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Account1}"/>
                                <TextBlock Text="{Binding Account2}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Type Column -->
                <DataGridTemplateColumn Header="Type" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Category1}"/>
                                <TextBlock Text="{Binding Category2}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Debit Column -->
                <DataGridTemplateColumn Header="Debit" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Debit}"/>
                                <TextBlock Text=""/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Credit Column -->
                <DataGridTemplateColumn Header="Credit" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" >
                                <TextBlock Text=""/>
                                <TextBlock Text="{Binding Credit}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add Entry Section-->
        <TextBox Name="account1TB" HorizontalAlignment="Left" Height="22" Margin="134,423,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
        <ComboBox Name="category1CB" HorizontalAlignment="Left" Height="20" Margin="134,476,0,0" VerticalAlignment="Top" Width="115">
            <ComboBoxItem Content="Asset"></ComboBoxItem>
            <ComboBoxItem Content="Liability"></ComboBoxItem>
            <ComboBoxItem Content="Owner's Equity"></ComboBoxItem>
        </ComboBox>
        <TextBox Name="debitTB" HorizontalAlignment="Left" Height="22" Margin="133,518,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
        <TextBox Name="account2TB" HorizontalAlignment="Center" Height="22" Margin="0,423,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
        <ComboBox Name="category2CB" HorizontalAlignment="Left" Height="20" Margin="261,476,0,0" VerticalAlignment="Top" Width="114">
            <ComboBoxItem Content="Asset"></ComboBoxItem>
            <ComboBoxItem Content="Liability"></ComboBoxItem>
            <ComboBoxItem Content="Owner's Equity"></ComboBoxItem>
        </ComboBox>
        <TextBox Name="creditTB" HorizontalAlignment="Left" Height="22" Margin="279,518,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
        <Button Name="addEntryBtn" Content="Add New Entry" HorizontalAlignment="Left" Height="22" Margin="449,412,0,0" VerticalAlignment="Top" Width="118" Click="addEntryBtn_Click"/>
        <Label Content="Debit Amount" HorizontalAlignment="Left" Height="24" Margin="134,494,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Account to Debit" HorizontalAlignment="Left" Height="24" Margin="134,394,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Account to Credit" HorizontalAlignment="Left" Height="24" Margin="267,395,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Credit  Amount" HorizontalAlignment="Left" Height="24" Margin="279,494,0,0" VerticalAlignment="Top" Width="96"/>
        <Label Content="Account Type" HorizontalAlignment="Left" Height="27" Margin="134,449,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Account Type" HorizontalAlignment="Left" Height="29" Margin="277,447,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox Name="warningTB" HorizontalAlignment="Left" Background="Beige" Visibility="Hidden"  Height="60" Margin="449,462,0,0" Text="Error: Please enter integers for Debit and Credit Amounts" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
    </Grid>
</UserControl>
