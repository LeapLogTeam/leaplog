<UserControl x:Class="LeapLog.IncomeStatement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapLog"
             mc:Ignorable="d"
             Background="White" Height="497" Width="643">
    <Grid>
        <Calendar Name="calendar" HorizontalAlignment="Left" Height="173" Margin="10,10,0,0" VerticalAlignment="Top" Width="194" SelectedDatesChanged="Calendar_SelectedDatesChanged" SelectionMode="MultipleRange"/>
        <DataGrid x:Name="entryGridR" HorizontalAlignment="Left" Height="206" Margin="10,188,0,0" VerticalAlignment="Top" Width="310">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Revenue" Width="160" Binding="{Binding Account}"/>
                <DataGridTextColumn Header="$" Width="160" Binding="{Binding Balance}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="entryGridE" HorizontalAlignment="Left" Height="206" Margin="325,188,0,0" VerticalAlignment="Top" Width="310">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Expenses" Width="160" Binding="{Binding Account}"/>
                <DataGridTextColumn Header="$" Width="160" Binding="{Binding Balance}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="entryGridTR" HorizontalAlignment="Left" Height="66" Margin="10,400,0,0" VerticalAlignment="Top" Width="310">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Total" Width="302" Binding="{Binding total}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="entryGridTE" HorizontalAlignment="Left" Height="66" Margin="325,400,0,0" VerticalAlignment="Top" Width="310">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Total" Width="302" Binding="{Binding total}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Margin="79,471,0,0" Text="0" Name="textBox1" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,472,0,0" Text="Net Income:" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
