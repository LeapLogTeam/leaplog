<Window x:Name="loginWindow" x:Class="LeapLog.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapLog"
        mc:Ignorable="d"
        Title="LeapLog" Height="440" Width="336" FontSize="14" Background="#FFB4E5F0" KeyUp="Window_KeyUp_1" WindowStartupLocation="CenterScreen">
    <Canvas x:Name="loginCanvas" HorizontalAlignment="Left" Height="400" Margin="-100,0,0,0" Width="537" >
        <Label x:Name="label" Content="Username:" RenderTransformOrigin="-0.897,0.593" FontSize="14" Height="30" Canvas.Left="164" Canvas.Top="165" Width="166" FontFamily="Microsoft Sans Serif"/>
        <Label x:Name="label1" Content="Enter Password: " FontSize="14" Height="30" Canvas.Left="164" Canvas.Top="230" Width="166" FontFamily="Microsoft Sans Serif"/>
        <TextBox x:Name="UserName" TabIndex="1" Text="Enter username" TextWrapping="Wrap" FontFamily="Calibri" FontStyle="Italic" PreviewKeyUp="UserName_PreviewKeyUp" Height="29" Canvas.Left="164" Canvas.Top="200" Width="192" PreviewMouseDown="UserName_PreviewMouseDown"/>
        <Label x:Name="label2" Content="Login" FontSize="20" FontWeight="Bold" Height="47" Canvas.Left="164" Canvas.Top="118" Width="72" FontFamily="Microsoft Sans Serif"/>
        <Button x:Name="enterButton" TabIndex="3" Content="ENTER" Click="button_Click" RenderTransformOrigin="0.388,0.555" KeyUp="enterButton_KeyUp" Height="46" Canvas.Left="164" Canvas.Top="305" Width="93" FontFamily="Microsoft Sans Serif"/>
        <Button x:Name="exitButton" TabIndex="4" Content="EXIT" Click="button1_Click" Height="46" Canvas.Left="268" Canvas.Top="305" Width="94" FontFamily="Microsoft Sans Serif"/>
        <PasswordBox x:Name="Pass" TabIndex="2" Width="192" Password="leaplog" Height="25" PreviewKeyUp="Pass_PreviewKeyUp" Canvas.Left="164" Canvas.Top="265" PreviewMouseDown="Pass_PreviewMouseDown" KeyUp="Pass_KeyUp_1" PasswordChar="*"/>
        <Image x:Name="image" Height="112" Canvas.Left="89" Canvas.Top="10" Width="342" Source="logo.png"/>

    </Canvas>
</Window>
