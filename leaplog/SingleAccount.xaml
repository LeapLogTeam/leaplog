<Window x:Class="LeapLog.SingleAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapLog"
        mc:Ignorable="d"
        Title="SingleAccount" Height="426" Width="462">
    <Grid>

        <!-- account name label -->
        <Label Content="ACCOUNT NAME" Name="accountName" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>

        <!-- account debits and credits dataGrids -->
        <DataGrid x:Name="debitGrid" Margin="70,65,231,68" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Debit" Width="*" Binding="{Binding Debit}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="creditGrid" Margin="236,65,64,68" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Credit" Width="*" Binding="{Binding Credit}"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- total account balance -->
        <Label Content="Balance:" HorizontalAlignment="Left" Margin="274,363,0,0" VerticalAlignment="Top"/>
        <Label Content="" Name="balanceLbl" HorizontalAlignment="Left" Margin="345,363,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
